programa
{
    funcao inicio()
    {
        real base, altura, area

        escreva("Digite o valor da base do triângulo: ")
        leia(base)

        escreva("Digite o valor da altura do triângulo: ")
        leia(altura)

        area = (base * altura) / 2

        escreva("A área do triângulo é: ", area, "\n")
    }
}
