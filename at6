programa
{
    funcao inicio()
    {
        real a, b, d
        real A1, A2, AT

        escreva("Digite o valor de a (largura dos retângulos): ")
        leia(a)

        escreva("Digite o valor de b (altura do retângulo superior): ")
        leia(b)

        escreva("Digite o valor de d (altura do retângulo inferior): ")
        leia(d)

        A1 = a * b
        A2 = a * d
        AT = A1 + A2

        escreva("Área do retângulo superior (A1): ", A1, "\n")
        escreva("Área do retângulo inferior (A2): ", A2, "\n")
        escreva("Área total (AT): ", AT, "\n")
    }
}
